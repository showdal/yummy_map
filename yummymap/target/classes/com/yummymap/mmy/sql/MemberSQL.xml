<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
            "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="mSQL">
  		<sql id="selCNT">
  			SELECT
  				count(*) cnt
  			FROM
  				member
  			WHERE
  				mid = #{mid}
  		</sql>
  		
  		<select id="Login" resultType="int" parameterType="mVO">
  			<!-- 
  			SELECT
  				count(*) cnt
  			FROM
  				member
  			WHERE
  				id = #{id}
  			 -->
  			<include refid="selCNT" /> #{id}
  				AND pw = #{pw}
  			
  		</select>


  </mapper>